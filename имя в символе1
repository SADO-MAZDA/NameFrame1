using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Имя_в_рамке
{
    class Program
    {
        static void Main(string[] args)
        {
            string Name;
            string userChar;
            int numberOfChar;
            string userCharNameUserChar;
            Console.Write("Ваше имя : ");
            Name =  Console.ReadLine();
            Console.Write("Ваш символ : ");
            userChar = Console.ReadLine();
            userCharNameUserChar = userChar + Name + userChar;
            numberOfChar = (Name.Length + 1);
           
            for (int i = 0; i <= numberOfChar ; i++)
            {
                 Console.Write(userChar); 
            }
            Console.WriteLine();
            Console.WriteLine(userCharNameUserChar);

            for (int i = 0; i <= numberOfChar; i++)
            {
                Console.Write(userChar);
            }
            Console.ReadKey();   
        }
    }
}
